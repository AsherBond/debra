prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datarootdir=@datarootdir@
mandir=@mandir@
INSTALL=@INSTALL@

VERSION=$(shell grep Version control | awk '{print $$2}')

all:
	@true

install:
	$(INSTALL) -d $(DESTDIR)$(bindir)
	$(INSTALL) bin/debra $(DESTDIR)$(bindir)/
	$(INSTALL) bin/sourceinstall $(DESTDIR)$(bindir)/
	$(INSTALL) bin/debra-makefile $(DESTDIR)$(bindir)/
	$(INSTALL) -d $(DESTDIR)$(mandir)/man1
	$(INSTALL) -m644 man/man1/debra.1.gz $(DESTDIR)$(mandir)/man1/
	$(INSTALL) -m644 man/man1/sourceinstall.1.gz $(DESTDIR)$(mandir)/man1/
 
uninstall:
	rm -f $(DESTDIR)$(bindir)/debra $(DESTDIR)$(bindir)/sourceinstall \
		$(DESTDIR)$(bindir)/debra-makefile
	rm -f $(DESTDIR)$(mandir)/man1/debra.1.gz \
		$(DESTDIR)$(mandir)/man1/sourceinstall.1.gz
	rmdir --ignore-fail-on-non-empty $(DESTDIR)$(mandir)/man1

man:
	@make -C man all

deb:
ifeq (root, $(shell whoami))
	bin/debra create debian control
	git archive --prefix=debian/ HEAD | gzip >debian.tar.gz
	bin/debra sourceinstall debian debian.tar.gz -p /usr/local
	rm debian.tar.gz
	chown -R root:root debian
	bin/debra build debian debra_$(VERSION)_all.deb
	bin/debra destroy debian
else
	@echo "You must be root to build a Debian package."
endif

.PHONY: all install uninstall man deb
